function deletVowel($textTwo){
     $vowels = ['a', 'А', 'о', 'О', 'э', 'Э', 'е', 'Е', 'и', 'И', 'ы', 'Ы', 'у', 'У', 'ё', 'Ё', 'ю', 'Ю', 'я', 'Я'];
     foreach ($textTwo as $index => $element)
         if($index == $vowels) {
             unset($textTwo[$element]);
         }
     return $textTwo;
}
print_r (deletVowel($arrText));
